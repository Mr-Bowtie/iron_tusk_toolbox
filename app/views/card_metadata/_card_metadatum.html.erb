<div
  data-controller="quick-view"
  data-action="click->quick-view#showCardModal"
  id="<%= dom_id card_data %>"
>
  <% if card_data.image_uris.length > 0 %>
    <%= image_tag card_data.image_uris["normal"], loading: "lazy" %>
  <% elsif card_data.front_image_uris.length > 0 %>
    <%= image_tag card_data.front_image_uris["small"], loading: "lazy" %>
  <% else %>
    <p>No Image Found</p>
  <% end %>

  <p class="has-text-centered"><b><%= card_data.name %></b></p>
  <p class="has-text-centered"><%= card_data.set.upcase %>
    #<%= card_data.collector_number %></p>

</div>
