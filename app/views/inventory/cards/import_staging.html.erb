<h1 class="title is-1">Staging</h1>
<div class="columns is-multiline is-flex-wrap-wrap is-align-items-baseline">
  <% @cards.each do |card| %>
    <div class="column is-narrow">
      <%= image_tag card.metadata.image_uris["small"], class: "image" %>
      <p><b>Quantity:</b>
        <%= card.quantity %></p>
      <p><b>Location:</b> <%= card.inventory_location %></p>  
      <% if card.foil %>
        <p><b>Foil</b></p>
      <% end %>
    </div>
  <% end %>
</div>
