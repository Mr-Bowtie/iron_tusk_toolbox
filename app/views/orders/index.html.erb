<p style="color: green"><%= notice %></p>

<% content_for :title, "Orders" %>

<div class="level">
  <div class="level-left">
    <h1 class="title is-1">Orders</h1>
  </div>
  <div class="level-right">
   <%= button_to "Grab Manapool Orders", orders_sync_manapool_path, class: "button is-link" %> 
  </div>
</div>

<%= form_with url: orders_pull_selected_path, local: true do |form| %>
  <%= form.submit "Pull Selected Orders", class: "button is-primary" %>
  <div class="columns is-multiline" id="orders">
    <% @orders.each do |order| %>
      <%= render order %>
    <% end %>
  </div>
<% end %>

